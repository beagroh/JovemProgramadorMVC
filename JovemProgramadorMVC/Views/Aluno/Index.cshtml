@model List<Aluno>

<table class="table">
    <thead>
        <tr>
            <th scope="col">Matricula</th>
            <th scope="col">Nome</th>
            <th scope="col">Cpf</th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null && Model.Any())

        {
            
           foreach (var Aluno in Model)
            {
                <tr>
                    <td>@Aluno.Matricula </td>
                    <td>@Aluno.Nome </td>
                    <td>@Aluno.Cpf </td>
                </tr>
            }
        }
    
    </tbody>
</table>

<div class="text-center">
    <a class="btn btn-primary type="button" asp-controller="Aluno" asp-action="AdicionarAluno"> Adicionar Aluno </a>

</div>